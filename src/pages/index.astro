---
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/HeroSection.astro";
import SpecialFeatures from "../components/FeaturesSection/SpecialFeatures.astro";
import PlannedTrip from "../components/PlannedTrip/PlannedTrip.astro";
import CountryDiosplay from "../components/CountrySection/CountryDisplay.astro";
import Footer from "../components/Footer.astro";
---

<!-- BEST PLACES TO VISIT IN EACH COUNTRY WALE SECTION ME 
  css not(:hover) use kar k bina hover hue images pe filter black and white or hover 
  wale pe filter color wala karna hai

-->
<Layout title="Travel">
  <main>
    <HeroSection
      image="imm.jpg"
      HeroText="You'll Never Travel Without Our Trip Planner again"
    />
  </main>
  <SpecialFeatures />
  <PlannedTrip />
  <main>
    <HeroSection
      image="lone_tree.jpg"
      HeroText='"It was my first trip and it was an incredible experience thanks to having an organized itinrary to get to do everything I wanted to do"'
      height="mid"
      TYPE="review_class"
    />
  </main>
  <CountryDiosplay />
  <main>
    <HeroSection
      image="ReadyToTravel.jpg"
      HeroText="Ready to plan your next trip in half the time?"
      height="mid"
      TYPE="Plan"
    >
      <button
        class="btn border-2 text-zinc-950 font-semibold bg-white text-lg btn p-2 pl-4 pr-4 rounded-full"
        >Start Planning</button
      >
    </HeroSection>
  </main>
  <Footer />
</Layout>

<style>
  main {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    flex-direction: column;
    height: 100vh;
    margin: auto;
    width: 100vw;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.2;
  }
  .btn:hover {
    transform: scale(1.05);
  }
</style>
