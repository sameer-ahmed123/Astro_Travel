---
import { Image } from "astro:assets";
import germany_image from "../../assets/place_images/Germany.jpg";
import mexico_image from "../../assets/place_images/Mexico.jpg";
import poland_image from "../../assets/place_images/Poland.jpg";
---

<div class="container">
  <div class="PlaceImage">
    <h3 class="place_title">Germany</h3>
    <Image
      width={600}
      height={600 / 1.5}
      format="avif"
      class="img"
      src={germany_image}
      alt="a beautiful place in germany"
    />
    <button class="btn border-2 border-white btn p-2 pl-6 pr-6 rounded-full"
      >explore</button
    >
  </div>
  <div class="PlaceImage">
    <h3 class="place_title">Mexico</h3>
    <Image
      width={600}
      height={600 / 1.5}
      format="avif"
      class="img"
      src={mexico_image}
      alt="a beautiful place in mexico"
    />
    <button class="btn border-2 border-white btn p-2 pl-6 pr-6 rounded-full"
      >explore</button
    >
  </div>
  <div class="PlaceImage">
    <h3 class="place_title">Poland</h3>
    <Image
      width={600}
      height={600 / 1.5}
      format="avif"
      class="img"
      src={poland_image}
      alt="a beautiful place in poland"
    />
    <button class="btn border-2 border-white btn p-2 pl-6 pr-6 rounded-full"
      >explore</button
    >
  </div>
</div>

<style>
  .container {
    height: 500px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 5px;
  }

  .PlaceImage {
    height: 400px;
    width: 380px;
    position: relative;
    border-radius: 30px;
    transition: all ease-in 0.3s;
  }
  /* Hover effect only outside of media queries */
  @media (min-width: 771px) {
    .PlaceImage:hover {
      cursor: pointer;
      width: 500px;
    }
    .container:hover .img:not(:hover) {
      filter: brightness(30%);
    }
  }

  .img {
    height: 100%;
    width: 100%;
    border-radius: inherit;
    filter: brightness(70%);
    transition: all ease-in 0.3s;
  }
  .place_title {
    font-size: 24px;
    color: #ffffff;
    font-weight: 500;
    position: absolute;
    top: 20px;
    left: 30px;
    z-index: 1;
  }

  .btn {
    position: absolute;
    top: 80%;
    left: 50px;
    color: #ffffff;
    transition: ease 0.3s;
  }

  .btn:hover {
    transform: scale(1.05);
    color: #000000;
    background-color: #ffffff;
    border: 1px solid black;
  }

  @media (max-width: 770px) {
    .container {
      height: 1100px;
      flex-direction: column;
    }
    .PlaceImage {
      height: 350px;
      width: 450px;
    }
  }

  @media (max-width: 428px) {
    .container {
      height: 800px;
      flex-direction: column;
      gap: 15px;
    }
    .PlaceImage {
      height: 200px;
      width: 350px;
    }

    .btn {
      top: 60%;
      left: 20px;
      padding-left: 20px;
      padding-right: 20px;
    }
  }
</style>
