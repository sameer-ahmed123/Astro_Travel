---
import CountryImageCard from "./CountryImageCard.astro";
---

<section class="CountryDisplaySection">
  <header class="CountryDisplayHeader">
    <h2 class="text-4xl text-wrap w-96">
      Find the best places to visit in each country
    </h2>
    <button class="btn border-2 border-black btn p-2 pl-4 pr-4 rounded-full">
      Explore new destinations
    </button>
  </header>

  <CountryImageCard />
</section>

<style>
  .CountryDisplaySection {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 50px;
    justify-content: center;
  }
  .CountryDisplayHeader {
    height: 100px;
    width: 80%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .btn {
    transition: ease 0.3s;
  }

  .btn:hover {
    transform: scale(1.05);
    /* color: #000000;
    background-color: #ffffff;
    border: 1px solid black; */
  }

  @media (max-width: 428px) {
    .CountryDisplayHeader {
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 15px;
      padding-left: 10px;
      padding-right: 10px;
    }
  }
</style>
